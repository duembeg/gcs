<RootWidget>
    MDBoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: "gsat remote control"
        MDBoxLayoutAutoRotate:
            spacing: 5
            MDBoxLayout:
                orientation: 'vertical'
                MDBoxLayoutDRO:
                    id: dro_panel
                MDGridLayoutButtons:
                    id: button_panel

            MDBoxLayout:
                orientation: 'vertical'
                # MDGridLayoutPlayControls:
