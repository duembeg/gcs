<MDBoxLayoutDRO>
    pos_hint: {'center_x':0.5, 'center_y': 0.5}
    # size_hint_y: None
    # height: self.minimum_height
    MDBoxLayout:
        # orientation: 'vertical'
        height: self.minimum_height
        ScrollView:
            MDList:
                id: dro_list
                axis_font_style: "H5"
                axis_text: "0.000"
                list_item_height: dp(64)
                TwoLineListItem:
                    id: x_axis
                    text: dro_list.axis_text
                    secondary_text: "X axis"
                    font_style: dro_list.axis_font_style
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: y_axis
                    text: dro_list.axis_text
                    secondary_text: "Y axis"
                    font_style: dro_list.axis_font_style
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: z_axis
                    text: dro_list.axis_text
                    secondary_text: "Z axis"
                    font_style: dro_list.axis_font_style
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: a_axis
                    text: dro_list.axis_text
                    secondary_text: "A axis"
                    font_style: dro_list.axis_font_style
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: b_axis
                    text: dro_list.axis_text
                    secondary_text: "B axis"
                    font_style: dro_list.axis_font_style
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: c_axis
                    text: dro_list.axis_text
                    secondary_text: "C axis"
                    font_style: dro_list.axis_font_style
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: feed_rate
                    text: "0.00"
                    secondary_text: "Feed Rate"
                    font_style: "H6"
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: status
                    text: "Stop"
                    secondary_text: "Status"
                    font_style: "H6"
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: sw_status
                    text: "Idle"
                    secondary_text: "SW Status"
                    font_style: "H6"
                    size_hint_y: None
                    height: dro_list.list_item_height
                    on_release: root.on_list_item_release(self)
        ScrollView:
            MDList:
                id: info_list
                font_style: "H6"
                list_item_height: dp(64)
                TwoLineListItem:
                    id: device
                    text: ""
                    secondary_text: "Device"
                    font_style: info_list.font_style
                    size_hint_y: None
                    height: info_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: gcode_pos
                    text: "-/- (0.00%)"
                    secondary_text: "Position in G-code"
                    font_style: info_list.font_style
                    size_hint_y: None
                    height: info_list.list_item_height
                    on_release: root.on_list_item_release(self)
                TwoLineListItem:
                    id: run_time
                    text: "00:00:00"
                    secondary_text: "Run Time"
                    font_style: info_list.font_style
                    size_hint_y: None
                    height: info_list.list_item_height
                    on_release: root.on_list_item_release(self)
                    # on_release: print(self.to_window(self.center_x, self.center_y), self.text)
                TwoLineListItem:
                    id: remote_server
                    text: ""
                    secondary_text: "Remote Server"
                    font_style: "Body1"
                    size_hint_y: None
                    height: info_list.list_item_height
                    on_release: root.on_list_item_release(self)


