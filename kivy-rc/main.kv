        #         rgba: app.get_color_random()
        #     Rectangle:
        #         pos: self.pos
        #         size: self.size
        id: step_size_buttons
        colums: 4
        rows: 3
        spacing: 5
        size_hint_x: None
        width: self.minimum_width
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

